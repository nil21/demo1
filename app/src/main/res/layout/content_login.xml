<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_full_wide"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nil.demo.MainActivity"
    tools:showIn="@layout/activity_login">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/constraintLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/whitecolor"
            android:gravity="center"
            android:background="@drawable/ico_cc_header"
            android:id="@+id/button"
            android:layout_marginBottom="179dp"

            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"

            android:imeOptions="actionNext"

            android:background="@drawable/bg_editext_icon"



            android:paddingStart="5dp"

            android:drawablePadding="10dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/pass"
            android:id="@+id/editText3"
            android:hint="**********"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="170dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
android:paddingStart="5dp"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/userr"
            android:hint="Enter Email Id"
            android:id="@+id/editText2"


            android:background="@drawable/bg_editext_icon"




           android:paddingRight="10dp"

            android:layout_marginBottom="13dp"
            android:layout_above="@+id/editText3"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3" />

    </RelativeLayout>

</RelativeLayout>
